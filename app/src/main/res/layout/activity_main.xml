<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            style="@style/ITEM"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/tasbihDisplay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="00"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="15dp"
                />

        </LinearLayout>


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:scrollbars="none"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="সুবহানাল্লাহ"
                    style="@style/ITEM"
                    android:padding="20dp"
                    android:textSize="19dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/kalpurush"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="আলহামদুলিল্লাহ্"
                    style="@style/ITEM"
                    android:padding="20dp"
                    android:textSize="19dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/kalpurush"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="আল্লাহু আকবার"
                    style="@style/ITEM"
                    android:padding="20dp"
                    android:textSize="19dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/kalpurush"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="আস্তাগফিরুল্লাহ"
                    style="@style/ITEM"
                    android:padding="20dp"
                    android:textSize="19dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/kalpurush"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="লা ইলাহা ইল্লাল্লাহ"
                    style="@style/ITEM"
                    android:padding="20dp"
                    android:textSize="19dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/kalpurush"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="সুবহানাল্লাহি ওয়া বিহামদিহী"
                    style="@style/ITEM"
                    android:padding="20dp"
                    android:textSize="19dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/kalpurush"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="সুবহানাল্লাহিল আযীমি ওয়াবি হামদিহী"
                    style="@style/ITEM"
                    android:padding="20dp"
                    android:textSize="19dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/kalpurush"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="লা হাওলা ওয়ালা কুয়্যাতা ইল্লা বিল্লাহ"
                    style="@style/ITEM"
                    android:padding="20dp"
                    android:textSize="19dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/kalpurush"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    />


            </LinearLayout>
        </HorizontalScrollView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="আল্লাাহুম্মা সল্লি আলা মুহাম্মাদ ওয়া আলা আলি মুহাম্মাদ, কামা সল্লাইতা, আলা ইবরাহীমা ওয়া আলা আলি ইবরাহীম, ইন্নাকা হামীদুম মাজীদ। আল্লাাহুম্মা বারিক আলা মুহাম্মাদ ওয়া আলা আলি মুহাম্মাদ, কামা বারকতা আলা ইবরাহীমা ওয়া আলা আলি ইবরাহীম, ইন্নাকা হামীদুম মাজীদ।"
            android:textSize="17dp"
            style="@style/TEXT"
            android:fontFamily="@font/kalpurush"
            android:gravity="center"
            android:justificationMode="inter_word"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal|bottom"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        >

        <ImageView
            android:id="@+id/nagetiveBtn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/nagetive"
            style="@style/ITEM"
            android:layout_marginRight="15dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            />

        <ImageView
            android:id="@+id/pludBtn"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/plus"
            style="@style/ITEM"
            android:layout_marginRight="15dp"
            android:padding="20dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            />

        <ImageView
            android:id="@+id/reloadBtn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/reload"
            style="@style/ITEM"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            />

    </LinearLayout>

</RelativeLayout>